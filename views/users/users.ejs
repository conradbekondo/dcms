<%- include('partials/head.ejs') %>

    <body id="app-container" class="menu-default show-spinner">
        <%- include('../partials/navbar.ejs') %>
            <%- include('../partials/menu.ejs') %>

                <main>
                    <div class="modal fade modal-right" id="newUserFormModal" tabindex="-1" role="dialog" aria-labelledby="newUserFormModal" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title"> Add System User</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form method="post" action="" id="new-user-form">
                                    <div class="modal-body">
                                        <% if(data.errors && data.errors.length> 0) {%>
                                            <ul class="list-group">
                                                <% data.errors.forEach(error=> {%>
                                                    <li class="list-group-item list-group-item-danger">
                                                        <%= error %>
                                                    </li>
                                                    <%})%>
                                            </ul>
                                            <%}%>
                                                <div id="savebtm_result"></div>
                                                <h4 class="text-muted mb-3">Personal</h4>
                                                <div class="form-group">
                                                    <label for="newFirstName">First Name <span
                                                            class="text-danger error_lastname">*</span></label>
                                                    <input value="<%= data.newUser.firstName %>" id="newFirstName" type="text" class="form-control" name="firstName">
                                                </div>
                                                <div class="form-group">
                                                    <label for="newLastName">Last Name</label>
                                                    <input value="<%= data.newUser.lastName %>" type="text" class="form-control" placeholder="" name="lastName" id="newLastName" autocomplete="off">
                                                </div>

                                                <div class="form-group">
                                                    <label for="newGender"> Gender <span class="text-danger">*</span>
                                                    </label>
                                                    <select value="<%= data.newUser.gender %>" class="form-control" name="gender" id="newGender">
                                                        <option value="">-- Select a Gender --</option>
                                                        <option value="1">Female</option>
                                                        <option value="0">Male</option>
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label for="newNatId">National ID <span
                                                            class="text-danger">*</span></label>
                                                    <input value="<%= data.newUser.natId %>" type="text" class="form-control" id="newNatId" name="natId">
                                                </div>

                                                <div class="form-group">
                                                    <label for="newPhone">Phone Number
                                                        <!-- <span
                                                            class="text-danger">*</span> -->
                                                    </label>
                                                    <input value="<%= data.newUser.test %>" type="text" class="form-control" placeholder="" name="phone " id="newPhone" autocomplete="off">
                                                </div>

                                                <div class="form-group">
                                                    <label for="newAddress">Address <span
                                                            class="text-danger">*</span></label>
                                                    <input value="<%= data.newUser.address %>" type="text" name="address" class="form-control" id="newAddress">
                                                </div>
                                                <hr />
                                                <h4 class="text-muted mt-4 mb-3">Account Information</h4>

                                                <div class="form-group">
                                                    <label for="newRole"> Role <span
                                                            class="text-danger error_lastname">*</span>
                                                    </label>
                                                    <select value="<%= data.newUser.role %>" class="form-control" name="role" id="newRole">
                                                        <option value="staff">Staff</option>
                                                        <option value="admin">Admin</option>
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label for="newUsername">Username <span
                                                            class="text-danger">*</span></label>
                                                    <input value="<%= data.newUser.username %>" type="text" name="username" class="form-control" id="newUsername">
                                                </div>

                                                <div class="form-group">
                                                    <label for="newPassword">Password <span
                                                            class="text-danger error_lastname">*</span></label>
                                                    <input type="password" class="form-control" placeholder="" name="password" id="newPassword">
                                                </div>

                                                <div class="form-group">
                                                    <label for="newConfirmPassword">Confirm Password <span
                                                            class="text-danger error_lastname">*</span></label>
                                                    <input type="password" class="form-control" placeholder="" name="confirmPassword" id="newConfirmPassword">
                                                </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="reset" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
                                        <button type="submit" id="savebtn" class="btn btn-primary">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="modal fade modal-right" id="updateUserForm" tabindex="-1" role="dialog" aria-labelledby="newUserFormModal" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title"> Update </h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form class="needs-validation">
                                    <div class="modal-body">
                                        <div class="fetcheupdate">

                                        </div>
                                        <div id="savebtm_result" class="form-group"></div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
                                        <!-- <button type="button" id="savebtn" onclick="updatebtm()" class="btn btn-primary">Save</button> -->
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <h1>Users</h1>
                            <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                                <ol class="breadcrumb pt-0">
                                    <li class="breadcrumb-item">
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-backdrop="static" data-target="#newUserFormModal">Add User <i
                                                class="simple-icon-user-follow"></i> </button>
                                    </li>

                                </ol>
                            </nav>
                            <div class="separator mb-1"></div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">

                                    </div>
                                    <table id="table" class="table">
                                        <thead>
                                            <tr>
                                                <th>Names </th>
                                                <th>Date Added </th>
                                                <th>Last Updated </th>
                                                <th>Role(s)</th>
                                                <th>Added By</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% data.users.forEach(user=> { %>
                                                <tr>
                                                    <td>
                                                        <%= `${user.profile.firstName} ${user.profile.lastName || ''
                                                            }`.trim() %>
                                                    </td>
                                                    <td>
                                                        <%= user.dateCreated?.toLocaleString() %>
                                                    </td>
                                                    <td>
                                                        <%=user.dateCreated?.toLocaleString() %>
                                                    </td>
                                                    <td>
                                                        <%= user.roles.join(',').toUpperCase() %>
                                                    </td>
                                                    <td>
                                                        <%= user.addedBy %>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group">
                                                            <% if(user.addedBy !='N/A' ) { %>
                                                                <button class="btn btn-sm btn-warning" title="Edit User information">
                                                                    <i class="simple-icon-pencil text-white"></i>
                                                                </button>
                                                                <button class="btn btn-sm btn-danger" title="Delete '<%=`${user.profile.firstName} ${user.profile.lastName || ''}`.trim()%>'">
                                                                    <i class="simple-icon-trash text-white"></i>
                                                                </button>
                                                                <%} else {%>
                                                                    <span class="text-muted">Cannot be modified</span>
                                                                    <%}%>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <%}) %>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                    </div>

                </main>
                <%- include('../partials/main-footer.ejs') %>
                    <%- include('partials/scripts.ejs') %>
    </body>

    </html>