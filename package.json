{
    "name": "dcms",
    "version": "0.0.2",
    "description": "Dry Cleaner Management System",
    "author": "QuickDo",
    "private": true,
    "license": "MIT",
    "main": "window.js",
    "scripts": {
        "prebuild": "rimraf dist",
        "postbuild": "copy .production.env dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "dev": "nest start --watch",
        "start:dev": "nest start --watch",
        "electron:dev": "nodemon --watch src,views --ext ts,ejs --ignore src/**/*.spec.ts --exec \"yarn build&&electron dist/window.js\"",
        "start:debug": "nest start --debug --watch",
        "start:prod": "set NODE_ENV=production&&node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config test/jest-e2e.json",
        "deploy": "yarn build&&yarn deploy"
    },
    "dependencies": {
        "@nestjs/common": "^8.0.0",
        "@nestjs/core": "^8.0.0",
        "@nestjs/jwt": "^9.0.0",
        "@nestjs/platform-express": "^8.0.0",
        "@nestjs/serve-static": "^3.0.0",
        "@nestjs/typeorm": "^9.0.1",
        "axios": "^0.27.2",
        "bcrypt": "^5.0.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.0.2",
        "ejs": "^3.1.8",
        "js-yaml": "^4.1.0",
        "mysql2": "^2.3.3",
        "nestjs-i18n": "^9.1.10",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "typeorm": "^0.3.9",
        "typeorm-naming-strategies": "^4.1.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.0.0",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/ejs": "^3.1.1",
        "@types/express": "^4.17.13",
        "@types/jest": "27.5.0",
        "@types/js-yaml": "^4.0.5",
        "@types/node": "^16.0.0",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "electron": "^21.0.1",
        "electron-build": "^0.0.3",
        "electron-builder": "^23.3.3",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "28.0.3",
        "nodemon": "^2.0.20",
        "prettier": "^2.3.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "28.0.1",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.0.0",
        "typescript": "^4.3.5",
        "webpack": "5.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "build": {
        "appId": "cm.quickdo.dcms",
        "productName": "DCMS (Testing)",
        "files": [
            "./dist/**/*",
            "./dist/.production.env",
            "./dist/**/*.js"
        ],
        "extraResources": [
            "./public/**",
            "./views/**",
            ".production.env",
            "./dist/i18n/**"
        ],
        "extraMetadata": {
            "main": "dist/window.js"
        },
        "copyright": "Copyright @2022 QuickDo",
        "buildVersion": "1.0.2"
    }
}